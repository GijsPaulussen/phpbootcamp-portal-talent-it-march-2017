{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

{#
    the homepage is a special page which displays neither a header nor a footer.
    this is done with the 'trick' of defining empty Twig blocks without any content
#}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'title.homepage'|trans|raw }}</h1>
    </div>

    <div class="row">
        <div class="col-sm-6 col-md-2">&nbsp;</div>
        <div class="col-sm-6 col-md-8">
            <div class="thumbnail">
                <img src="/images/elephpant_city_hall.jpg" alt="Elephpant City Hall">
            </div>
        </div>
        <div class="col-sm-6 col-md-2">&nbsp;</div>
    </div>

    <div class="modal-header">
        <div class="modal-header">
            <a href="{{ path('show_opening_hours') }}">
                <h1>{{ 'help.browse_hours'|trans|raw }}</h1>
            </a>
            {% if openingHours %}
                {{ include('default/openinghours.html.twig') }}
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'help.browse_app'|trans|raw }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('blog_index') }}">
                        <i class="fa fa-users" aria-hidden="true"></i> {{ 'action.browse_app'|trans }}
                    </a>
                </p>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'help.browse_admin'|trans|raw }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('admin_index') }}">
                        <i class="fa fa-lock" aria-hidden="true"></i> {{ 'action.browse_admin'|trans }}
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}